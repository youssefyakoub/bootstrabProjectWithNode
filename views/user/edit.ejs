 <% country_list.forEach(item => { %>
  <option <%= item === info.country ? "selected" : null %>> <%= item %></option>
 <% }) %>
              </select>
            </div>
          </div>
          <div>
            <div class="col-md-6">
              <label for="inputGender" class="form-label">Gender :</label>
              <select name="gender" id="inputGender" class="form-select">
                <option selected hidden disabled>Choose...</option>
                <option <%= "Male" === info.gender ? "selected" : null %>>Male</option>
                <option <%= "Female" === info.gender ? "selected" : null %>>Female</option>
              </select>
            </div>
          </div>

          <div class="col-12">
            <button type="submit" class="btn btn-primary">
              Update Changes
            </button>
            <button
              data-bs-toggle="modal"
              data-bs-target="#modal2"
              type="button"
              class="btn btn-danger"
            >
              Delete User
            </button>
            <!-- Modal -->


          </div>
        </form>
      </section>
      <div
      class="modal fade"
      id="modal2"
      tabindex="-1"
      aria-labelledby="Label"
      aria-hidden="true"
    >
      <div class="modal-dialog">
        <div class="modal-content">
          <div class="modal-header">
            <h1 class="modal-title fs-5" id="modal2Label">
              Delete User
            </h1>
            <button
              type="button"
              class="btn-close"
              data-bs-dismiss="modal"
              aria-label="Close"
            ></button>
          </div>
          <div class="modal-body">
            Are you sure you want to continue delete the user ?
          </div>
          <div class="modal-footer">
            <button
              type="button"
              class="btn btn-secondary"
              data-bs-dismiss="modal"
            >
              Close
            </button>
            <form  action="/edit/<%= info._id %>?_method=DELETE" method="post">
              <button type="submit" class="btn btn-danger">Delete</button>
            </form>
          </div>
        </div>
      </div>
    </div>
    </main>
    <script src="../js/bootstrap.bundle.min.js"></script>

    <script src="../js/sidebars.js"></script>
    <script src="../js/main.js"></script>
  </body>
</html>
